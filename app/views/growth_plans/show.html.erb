<div class="p-4 sm:ml-64">
  <div class="p-4">
    
    <h1 class="text-3xl font-bold text-gray-900 mb-2 dark:text-white">
      <%= @growth_plan.title %>
    </h1>

    <%= render partial: "growth_plan_nav", locals: { growth_plan: @growth_plan } %>

    <div id="growth-plan-container" class="grid grid-cols-3 gap-6">
      <!-- Left Column (2/3 width) -->
      <div class="col-span-2 m-1">

        <div class="grid grid-cols-3 gap-2">
          <div class="col-span-1">
            <div class="w-full mb-6">
              <h2 class="text-xs font-medium tracking-tight text-gray-900 ">
                START DATE
              </h2>
              <p class="text-base font-normal text-gray-500">
                <%= @growth_plan.start_date.to_date.strftime("%b %d, %Y") %>
              </p>
            </div>
            <div class="w-full mb-4">
              <h2 class="text-xs font-semibold tracking-tight text-gray-900 ">
                END DATE
              </h2>
              <p class="text-base text-gray-500">
                <%= @growth_plan.end_date.to_date.strftime("%b %d, %Y") %>
              </p>
            </div>
          </div>

          <div class="col-span-1">
            <div class="w-full mb-6">
              <h2 class="text-xs font-medium tracking-tight text-gray-900 ">
                FOCUS AREA
              </h2>
              <p class="text-base font-normal text-gray-500">
                <%= @growth_plan.focus_area %>
              </p>
            </div>
            <div class="w-full mb-6">
              <h2 class="text-xs font-medium tracking-tight text-gray-900 ">
                CATEGORY
              </h2>
              <p class="text-base font-normal text-gray-500">
                <%= @growth_plan.category %>
              </p>
            </div>
          </div>

          <div class="col-span-1">
            <div class="w-full mb-6">
              <h2 class="text-xs font-medium tracking-tight text-gray-900 ">
                STATUS
              </h2>
              <p class="text-base font-normal text-gray-500">
                <%= @growth_plan.status %>
              </p>
            </div>
          </div>

          <div class="col-span-3 border-t border-gray-200 pt-4">
            <div class="w-full mb-6">
              <h2 class="text-xs font-semibold tracking-tight text-gray-900 ">
                DESCRIPTION
              </h2>
              <p class="text-base text-gray-500">
                <%= @growth_plan.description %>
              </p>
            </div>

            <div class="w-full mb-4">
              <h2 class="text-xs font-semibold tracking-tight text-gray-900 ">
                IMPACT
              </h2>
              <p class="text-base text-gray-500">
                <%= @growth_plan.impact %>
              </p>
            </div>
          </div>

          <div class="col-span-3 border-t border-gray-200 pt-4">
            <div class="w-full mb-4">
              <h2 class="text-xs font-semibold tracking-tight text-gray-900 ">
                SUCCESS CRITERIA
              </h2>
              <p class="text-base text-gray-500">
                <%= @growth_plan.success_criteria %>
              </p>
            </div>
          </div>
        </div>
        
      </div>

      <!-- Right Column (1/3 width) -->
      <div class="col-span-1">
        <div class="w-full p-6 bg-white border border-gray-200 rounded-lg">
        </div>
      </div>
    </div>
  </div>
</div>
