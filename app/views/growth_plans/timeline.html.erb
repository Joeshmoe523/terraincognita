<div class="p-4 sm:ml-64">
  <div class="p-4">
    <h1 class="text-3xl font-bold text-gray-900 mb-2 dark:text-white">
      <%= @growth_plan.title %>
    </h1>

    <%= render partial: "growth_plan_nav", locals: { growth_plan: @growth_plan } %>

    <div id="growth-plan-container" class="grid grid-cols-3 gap-6">
      <!-- Left Column (2/3 width) -->
      <div class="col-span-2 space-y-6">

        <!-- Timeline -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-6">Progress Timeline</h2>
          <ol class="relative border-s border-gray-200 dark:border-gray-700 m-4"> 
            <%= render partial: "timeline_items" %>
          </ol>
        </div>
      </div>

      <!-- Right Column (1/3 width) -->
      <div class="col-span-1">
        <%= render partial: "growth_plans/quick_actions" %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "feedback_items/add_modal" %>
<%= render partial: "progress_updates/add_modal" %>