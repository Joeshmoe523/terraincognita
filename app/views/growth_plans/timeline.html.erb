<div class="p-4 sm:ml-64">
  <div class="p-4">
    <h1 class="text-3xl font-bold text-gray-900 mb-2 dark:text-white">Growth Plan</h1>

    <%= render partial: "growth_plan_nav", locals: { growth_plan: @growth_plan } %>

    <div id="growth-plan-container" class="grid grid-cols-3 gap-6">
      <!-- Left Column (1/3 width) -->
      <div class="col-span-1">
        <div class="w-full p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <h2 class="mb-4 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
            Growth Plan Details
          </h2>
          <div class="p-4 bg-gray-50 border border-gray-100 rounded-lg dark:bg-gray-700 dark:border-gray-600">
            <!-- Growth plan details will go here -->
          </div>
        </div>
      </div>

      <!-- Right Column (2/3 width) -->
      <div class="col-span-2 space-y-6">
        <%= render partial: "update_form", growth_plan: @growth_plan %>

        <!-- Timeline -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-6">Progress Timeline</h2>
          <ol class="relative border-s border-gray-200 dark:border-gray-700 m-4"> 
            <%= render partial: "timeline_items" %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
